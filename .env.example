# Example environment variables for Flight Booking System Microservices
# Copy this file to .env and update the values as needed
# IMPORTANT: Never commit .env files to version control!

# PostgreSQL Database (for user-service)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=flightbooking_users
DB_USER=postgres
DB_PASSWORD=CHANGE_THIS_PASSWORD

# MongoDB Database (for flight, booking, admin services)
MONGO_URI=mongodb://localhost:27017/flightbooking

# JWT Secret Key (MUST change this in production!)
# Generate a strong secret: openssl rand -base64 32
JWT_SECRET=CHANGE_THIS_TO_A_STRONG_SECRET_KEY

# Admin User Initialization (optional - only used on first startup)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=CHANGE_THIS_PASSWORD
ADMIN_DISPLAY_NAME=System Administrator
LOG_ADMIN_CREATION=false

# Service Ports (optional - defaults shown)
API_GATEWAY_PORT=3000
USER_SERVICE_PORT=3001
FLIGHT_SERVICE_PORT=3002
BOOKING_SERVICE_PORT=3003
ADMIN_SERVICE_PORT=3004

# Service URLs (for Docker/containerized environments)
USER_SERVICE_URL=http://localhost:3001
FLIGHT_SERVICE_URL=http://localhost:3002
BOOKING_SERVICE_URL=http://localhost:3003
ADMIN_SERVICE_URL=http://localhost:3004

# Frontend API URL
VITE_API_URL=http://localhost:3000

# Node Environment
NODE_ENV=development